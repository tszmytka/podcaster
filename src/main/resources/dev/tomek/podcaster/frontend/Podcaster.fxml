<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.tomek.podcaster.frontend.PodcasterController">
    <left>
        <HBox prefHeight="375.0" prefWidth="250.0" BorderPane.alignment="CENTER">
            <children>
                <ListView fx:id="lvCategories" minWidth="320.0" prefHeight="200.0" prefWidth="200.0" />
            </children>
        </HBox>
    </left>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#menuFileExit" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#menuHelpAbout" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <ListView fx:id="lvPodcasts" disable="true" minWidth="350.0" onMouseClicked="#lvPodcastsClicked" />
            </children>
        </HBox>
    </center>
    <right>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <bottom>
                <Button fx:id="buttonPlay" defaultButton="true" disable="true" mnemonicParsing="false" onMouseClicked="#buttonPlayClicked" text="Play" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="30.0" />
                    </BorderPane.margin>
                </Button>
            </bottom>
            <center>
                <VBox>
                    <children>
                        <VBox fx:id="vboxPodcastDetails" alignment="BOTTOM_LEFT" visible="false">
                            <children>
                                <Label text="Title">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblPodcastName" alignment="CENTER_RIGHT" wrapText="true" />
                                <Label text="Duration">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblPodcastDuration" wrapText="true" />
                                <Label prefWidth="50.0" text="Guests">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblPodcastGuests" wrapText="true" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </right>
</BorderPane>
